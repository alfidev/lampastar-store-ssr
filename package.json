{
  "name": "lampastar-store",
  "version": "1.0.0",
  "description": "React SSR lampastar store",
  "main": "./dist/app.js",
  "author": "Alfi",
  "license": "MIT",
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "regSSL": "node ./src/sslRegister/index.js",
    "test": "npx jest",
    "lint": "eslint src/**/*.{js,jsx,ts,tsx,json}",
    "lint:fix": "eslint --fix 'src/**/*.{js,jsx,ts,tsx,json}'",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
    "build:prod": "npx webpack --config ./webpack/webpack.server.ts --env PRODUCTION",
    "build:measure": "npx webpack --config ./webpack/webpack.server.ts --env PRODUCTION --env MEASURE",
    "start:client:hot": "npx webpack serve --config ./webpack/webpack.client.ts --env HOT --env DEVELOPMENT",
    "start:client": "npx webpack serve --config ./webpack/webpack.client.ts --env DEVELOPMENT",
    "start:server": "npx concurrently \"npx webpack -w --config ./webpack/webpack.server.ts\" \"npx nodemon ./dist/app.js\""
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.1",
    "axios": "^0.27.2",
